  },
  "devDependencies": {
    "@serverless-stack/cli": "^1.2.12",
    "@serverless-stack/resources": "^1.2.12",
    "@tsconfig/node16": "^1.0.2",
    "@typescript-eslint/experimental-utils": "^5.29.0",
    "testcontainers": "^8.10.1",
    "ts-standard": "^11.0.0",
    "typescript": "^4.7.2",
    "vitest": "^0.13.0"
  },
  "workspaces": [
    "backend",
    "pickup"
  ],
  "dependencies": {
    "aws-cdk-lib": "2.24.0"
  },
  "ts-standard": {
    "ignore": [
      "backend/schema-gen.ts",
      "vitest.config.ts"
    ]
  }
