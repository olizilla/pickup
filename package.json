{
  "name": "ipfs-pinning-service-lambda",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "sst start",
    "build": "sst build",
    "deploy": "sst deploy",
    "remove": "sst remove",
    "console": "sst console",
    "typecheck": "tsc --noEmit",
    "lint": "ts-standard",
    "test": "vitest run",
    "test:debug": "DEBUG=testcontainers* vitest run --reporter json",
